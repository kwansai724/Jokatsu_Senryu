<div class="modal-dialog modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title mr-4">グループ一覧</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row mt-3">
        <div class="d-flex align-items-center border-bottom users-index col-8">
          グループ名
        </div>
        <div class="d-flex align-items-center border-bottom users-index col-4">
          投票者数
        </div>
        <div class="col-2">
        </div>
      </div>
      <% @staffs.each do |staff| %>
        <div class="row">
          <div class="users-index mt-3 mb-3 col-8">
            <%= staff.group_name %>
          </div>
          <div class ="users-index mt-3 mb-3 col-4">
            <%= @group_members.where(group: staff.group_name).count %> 名
          </div>
        </div>
      <% end %>        
    </div>
  </div>
</div>

