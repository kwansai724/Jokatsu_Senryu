<div class="container mt-3 col-md-8 col-lg-6 users-show">
  <h1 class="mb-5">投稿者詳細</h1>

  <h4>【投稿川柳】</h4>
  <div>
    <% @posts.each do |post| %>
      <% if post.first_phrase.present? %>
        <div class="users-index">
          <p><%= post.id %>： <%= post.first_phrase %>　<%= post.second_phrase %>　<%= post.third_phrase %><p>
        </div>
      <% end %>  
    <% end %>  
  </div>

  <div class="row">
    <div class="d-flex align-items-center border-top users-index mt-2 mb-1 col-4">
      <p class="mt-3">名前:</p>
    </div>
    <div class="d-flex align-items-center border-top users-index mt-2 mb-1 col-8">
      <p class="mt-3"><%= @user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      Eメール:
    </div>
    <div class ="users-index mt-3 mb-3 col-8">
      <%= @user.email %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      性別:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.gender %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      住所:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.address %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      職業:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.profession %><%= "：　#{@user.other}" if @user.other.present? %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      年代:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.age %>
    </div>
  </div>
  <div class="row">
    <div class="users-index mt-3 mb-3 col-4">
      メッセージ:
    </div>
    <div class="users-index mt-3 mb-3 col-8">
      <%= @user.note %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border-bottom users-index mt-3 mb-3 col-4">
      <p class="mb-3">アンケート:<p>
    </div>
    <div class="d-flex align-items-center border-bottom users-index mt-3 mb-3 col-8">
      <p class="mb-3"><%= @user.questionary %><p>
    </div>
  </div>
  <%= link_to "戻る", :back, class: "btn-gradient confirm-btn" %>
</div>

