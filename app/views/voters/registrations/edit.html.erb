<h1>アカウント編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class='sign-form'>
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class='sign-form'>
    <%= f.label :group, class: 'form-label' %>
    <%= f.select :group, Staff.pluck(:group_name), { include_blank: '選択してください'}, autofocus: true, autocomplete: 'group', class: 'form-control' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit t('.update'), class: 'btn btn-primary' %>
  </div>
  <div class="d-grid gap-2">
    <%= link_to "戻る", voterposts_path(format: current_voter.id), class: 'btn btn-secondary' %>
  </div>
<% end %>